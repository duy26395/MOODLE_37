{{#hascourse}}
<h4 class="text-dark md-block font-weight-bold" align="center">KHÓA HỌC PHỔ BIẾN</h4>
 <div class="container outline-none" id="courseslider" tabindex="1">
        <div class="row">
                <div id="news-slider6" class="owl-carousel owl-theme">
                   {{#newscourse}}
                    <div class="post-slide6">
                      
                     
                        <div class="post-img">
                            {{{courseimage}}}
                            <div class="post-info">
                                <ul class="category">
                                    <li>Học viên <a href="#">{{countstudent}}</a></li>
                                    <li>Giáo viên <a href="#">{{fullnamet}}</a></li>
                                   
                                </ul>
              
                            </div>
                        </div>
                        <div class="post-review">
                            <span class="icons">
                                   {{{imageteacher}}}
                            </span>
                            <h3 class="post-title"><a href="{{{link}}}" title="{{fullname}}">{{fullname}}</a></h3>
                            <p class="post-description" style="height:104px">{{summary}}</p>
                          
                        </div>
                        
                     
                    </div>
                       {{/newscourse}}                
                </div>
        </div>
    </div>
{{/hascourse}}
